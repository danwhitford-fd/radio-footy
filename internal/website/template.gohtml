<!DOCTYPE html>
<html lang="en-gb">
    <head>
        <title>Radio Football</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="Description" content="Upcoming football matches on the wireless">

        <style>
            * {
                font-family: monospace;
                background-color: #121212;
                color: #ffffff;

            }
            p {
                opacity: 87%;
            }
            .row {
                margin: 0;
                max-width: 100vw;
                white-space: nowrap;
                overflow: visible;
            }
        </style>
    </head>
    <body>
        <h1>Football on the radio</h1>
        {{ range .MatchDays }}
            <p><b>{{ .Date }}</b></p>
            <p class="row">*-{{ call $.Repeat "-" $.Col}}-*</p>
            {{ range .Matches }}
                <p class="row text-row">| <b>{{ .Time }}</b> | {{ .Station }}{{ call $.RepeatBlind (len (print .Time " | " .Station)) $.Col }} |</p>
                <p class="row text-row">| <b>{{ call $.Pad .Title $.Col }}</b> |</p>
                <p class="row text-row">| {{ call $.Pad .Competition $.Col }} |</p>
                <p class="row">*-{{ call $.Repeat "-" $.Col}}-*</p>
            {{ end }}
        {{ end }}
    </body>

    </html>
