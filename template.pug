doctype html
html(lang='en-GB')
    head
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/water.css@2/out/water.css')
        meta(name='viewport', content='width=device-width, initial-scale=1' )
        meta(name='description' content='Timings for live football commentaries on the radio')
        link(rel='icon' type='image/svg+xml' href='favicon.svg')
        link(rel='manifest' href='/manifest.webmanifest')
        title= '🎙 | English football on the radio'

    body
        h1 Football on the radio ⚽ 📻

        each date in matches
            h2= date.date
            each match in date.matches
                p
                    a(href=match.calString)
                        span(style="margin-right: 5px")= match.clockEmoji
                        span= match.time
                p
                    span(style="margin-right: 5px")= '📻'
                    span= match.station
                p
                    span(style="margin-right: 5px")= '⚽'
                    span= match.title
                p
                    span(style="margin-right: 5px")= '🏆'
                    span= match.competition
                hr
