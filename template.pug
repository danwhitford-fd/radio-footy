html
    head
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/water.css@2/out/water.css')
        meta( name='viewport', content='width=device-width, initial-scale=1' )

    body
        h1 Football on the radio ⚽ 📻

        each date in matches
            h2= date.date
            each match in date.matches
                p
                    a(href=match.calString)
                        span(style="margin-right: 5px")= match.clockEmoji
                        span= match.time
                p
                    span(style="margin-right: 5px")= '📻'
                    span= match.station
                p
                    span(style="margin-right: 5px")= '⚽'
                    span= match.title
                p
                    span(style="margin-right: 5px")= '🏆'
                    span= match.competition
                hr
